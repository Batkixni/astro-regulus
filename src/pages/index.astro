                            <div class="absolute inset-0 flex items-center justify-center opacity-10" />
                        </div>

                        <div class="relative z-10 text-center space-y-8 animate-blur-in">
                            <div class="w-32 h-32 md:w-48 md:h-48 mx-auto overflow-hidden rounded-full border-2 border-white/20 mb-8 group cursor-pointer">
                                <img
                                    src={PROFILE.avatar}
                                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                />
                            </div>
                            <h2 class="text-6xl md:text-9xl font-black uppercase tracking-tighter leading-none">
                                {PROFILE.role.split(" / ")[0]}
                            </h2>
                            <p class="text-xl md:text-2xl font-light text-white/60 max-w-2xl mx-auto leading-relaxed">
                                {PROFILE.bio}
                            </p>
