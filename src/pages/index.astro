    {/* Shared Scripts */}
    <script>
        document.addEventListener("astro:page-load", () => {
            // Logic for Layout 1/2/3/4 Back to Top (Existing)
            const backToTopBtn = document.getElementById("back-to-top");
            if (backToTopBtn) {
                backToTopBtn.addEventListener("click", () => {
                    window.scrollTo({ top: 0, behavior: "smooth" });
                });
                // ... existing toggle logic ...
                const toggleVisibility = () => {
                    const scrolled = window.scrollY > 300;
                    backToTopBtn.dataset.visible = scrolled.toString();
                    if (scrolled) {
                        backToTopBtn.classList.remove(
                            "invisible",
                            "pointer-events-none",
                        );
                    }
                };
                window.addEventListener("scroll", toggleVisibility);
            }

            // Logic for Layout 5 Cinematic Nav
            const cinematicNav = document.getElementById("cinematic-nav");
            const cinematicBackToTop = document.getElementById(
                "cinematic-back-to-top",
            );
            const cinematicContainer = document.getElementById(
                "cinematic-container",
            );

            if (cinematicContainer && cinematicNav) {
                // Determine total number of slides (Hero + Projects + Footer)
                const sections = Array.from(cinematicContainer.children);
                let currentIndex = 0;
                let isAnimating = false;
                const totalSections = sections.length;

                const currentGenreEl = document.getElementById("current-genre");
                const genreToggleBtn =
                    document.getElementById("genre-toggle-btn");
                const genreMenu = document.getElementById("genre-menu");
                const genreSelectBtns =
                    document.querySelectorAll(".genre-select-btn");

                // Main navigation function
                const goToSection = (index: number) => {
                    if (index < 0) index = 0;
                    if (index >= totalSections) index = totalSections - 1;

                    currentIndex = index;
                    isAnimating = true;

                    // Calculate translation
                    // We assume each section is taking up the full viewport or part of the flow.
                    // For the "One Page Scroll" transparency, usually sections are 100vh.
                    // If the footer is 50vh, it will just show at the bottom when translated.
                    cinematicContainer.style.transform = `translateY(-${index * 100}vh)`;

                    // Update UI (Genre & Nav Visibility)
                    updateUI(index);

                    // Re-enable input after animation
                    // Duration is 1500ms match css
                    setTimeout(() => {
                        isAnimating = false;
                    }, 1500);
                };

                const updateUI = (index: number) => {
                    // Update Active State for Animations
                    sections.forEach((section, i) => {
                        if (i === index) {
                            section.setAttribute("data-active", "true");
                        } else {
                            section.removeAttribute("data-active");
                        }
                    });

                    const currentSection = sections[index];

                    // Update Genre
                    const genre = currentSection.getAttribute("data-genre");
                    if (genre && currentGenreEl) {
                        currentGenreEl.textContent = genre;
                    }

                    // Show/Hide Nav
                    // Hero is index 0
                    if (index === 0) {
                        cinematicNav.dataset.visible = "false";
                        // Close menu if open
                        if (genreMenu) {
                            genreMenu.style.opacity = "0";
                            genreMenu.style.pointerEvents = "none";
                            genreMenu.style.transform = "translateY(8px)";
                        }
                    } else {
                        cinematicNav.dataset.visible = "true";
                    }
                };

                // Wheel Event
                window.addEventListener(
                    "wheel",
                    (e: WheelEvent) => {
                        if (isAnimating) return;
                        // Threshold to prevent accidental tiny scrolls
                        // Lowered to 10 to be more responsive to trackpads
                        if (Math.abs(e.deltaY) < 10) return;

                        if (e.deltaY > 0) {
                            goToSection(currentIndex + 1);
                        } else {
                            goToSection(currentIndex - 1);
                        }
                    },
                    { passive: true },
                );

                // Key Event
                window.addEventListener("keydown", (e: KeyboardEvent) => {
                    if (isAnimating) return;
                    if (
                        e.key === "ArrowDown" ||
                        e.key === "PageDown" ||
                        e.key === " "
                    ) {
                        e.preventDefault();
                        goToSection(currentIndex + 1);
                    } else if (e.key === "ArrowUp" || e.key === "PageUp") {
                        e.preventDefault();
                        goToSection(currentIndex - 1);
                    } else if (e.key === "Home") {
                        goToSection(0);
                    } else if (e.key === "End") {
                        goToSection(totalSections - 1);
                    }
                });

                // Touch Events (Swipe)
                let touchStartY = 0;
                window.addEventListener("touchstart", (e: TouchEvent) => {
                    touchStartY = e.touches[0].clientY;
                });

                window.addEventListener("touchend", (e: TouchEvent) => {
                    if (isAnimating) return;
                    const touchEndY = e.changedTouches[0].clientY;
                    const diff = touchStartY - touchEndY;

                    if (Math.abs(diff) > 50) {
                        // Swipe threshold
                        if (diff > 0) {
                            goToSection(currentIndex + 1);
                        } else {
                            goToSection(currentIndex - 1);
                        }
                    }
                });

                // Button Listeners
                if (cinematicBackToTop) {
                    cinematicBackToTop.addEventListener("click", () => {
                        goToSection(0);
                    });
                }

                // Genre Menu Logic
                if (genreToggleBtn && genreMenu) {
                    genreToggleBtn.addEventListener(
                        "click",
                        (e: MouseEvent) => {
                            e.stopPropagation();
                            const isVisible = genreMenu.style.opacity === "1";

                            if (isVisible) {
                                genreMenu.style.opacity = "0";
                                genreMenu.style.pointerEvents = "none";
                                genreMenu.style.transform = "translateY(8px)";
                            } else {
                                genreMenu.style.opacity = "1";
                                genreMenu.style.pointerEvents = "auto";
                                genreMenu.style.transform = "translateY(0)";
                            }
                        },
                    );

                    // Close menu when clicking outside
                    document.addEventListener("click", (e: MouseEvent) => {
                        const target = e.target as HTMLElement;
                        // Check if the click is outside the genreMenu and genreToggleBtn
                        if (
                            genreMenu.style.opacity === "1" &&
                            !genreMenu.contains(target) &&
                            !genreToggleBtn.contains(target)
                        ) {
                            genreMenu.style.opacity = "0";
                            genreMenu.style.pointerEvents = "none";
                            genreMenu.style.transform = "translateY(8px)";
                        }
                    });

                    // Handle Genre Selection
                    genreSelectBtns.forEach((btn) => {
                        btn.addEventListener("click", () => {
                            const targetGenre =
                                btn.getAttribute("data-target-genre");
                            // Find index of first section with this genre
                            const targetIndex = sections.findIndex(
                                (section) =>
                                    section.getAttribute("data-genre") ===
                                    targetGenre,
                            );

                            if (targetIndex !== -1) {
                                goToSection(targetIndex);

                                // Close menu
                                genreMenu.style.opacity = "0";
                                genreMenu.style.pointerEvents = "none";
                                genreMenu.style.transform = "translateY(8px)";
                            }
                        });
                    });

                    // Initialize
                    // Give a small delay to ensure DOM is fully ready for transitions
                    setTimeout(() => {
                        updateUI(0);
                    }, 100);
                }
            }
        });
    </script>
</Layout>
