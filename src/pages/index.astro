---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { ThemeToggle } from "@/components/ThemeToggle";

// --- CONFIGURATION ---
// 1 = Center Aligned (Original)
// 2 = Left Aligned (Bax Style)
// 3 = Split View (Modern Sidebar)
// 4 = Bento / Mosaic View
// 5 = Cinematic Scroll (Full Screen Snap)
const CURRENT_LAYOUT: number = 1;

// ---------------------

const PROFILE = {
    name: "Bax",
    role: "Visual designer / Founder of STUDIO SORAI",
    email: "bax@sorai.tw",
    bio: "A 20 yo self-taught designer have experience in graphic design and motion design. Currently working as a freelancer.",
    avatar: "/header.jpg",
    links: {
        twitter: "x.com/baxartworkz",
        email: "mailto:bax@sorai.tw",
    },
};

// Fetch all work items (mdx files)
const portfolioData = await getCollection("work");

// Sort by date descending
const sortedPortfolio = portfolioData.sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

// Group by genre
const groupedPortfolio = sortedPortfolio.reduce(
    (acc, project) => {
        const genre = project.data.genre || "Motion";
        if (!acc[genre]) acc[genre] = [];
        acc[genre].push(project);
        return acc;
    },
    {} as Record<string, typeof sortedPortfolio>,
);
// Flatten groupedPortfolio to respect genre ordering for Layout 5
const genreSortedPortfolio = Object.values(groupedPortfolio).flat();
---

<Layout title="Bax Portfolio" description={PROFILE.role} image="/og-image.png">
    {
        /* =========================================
        LAYOUT 1: Centered / Original
       ========================================= */
    }
    {
        CURRENT_LAYOUT === 1 && (
            <main class="container mx-auto px-4 py-12 max-w-6xl animate-blur-in">
                {/* Profile Section */}
                <header class="flex flex-col items-center justify-center mb-16 space-y-6 relative">
                    <div class="absolute right-0 top-0 md:top-auto">
                        <ThemeToggle client:load />
                    </div>

                    <div class="w-24 h-24 md:w-32 md:h-32 overflow-hidden bg-muted relative group cursor-pointer">
                        {/* Placeholder for Profile Image */}
                        <img
                            src={PROFILE.avatar}
                            alt="Profile"
                            class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
                        />
                    </div>

                    <div class="text-center max-w-lg space-y-4">
                        <h1 class="text-2xl font-bold tracking-tight animate-blur-in delay-200">
                            {PROFILE.name}
                        </h1>
                        <p class="text-muted-foreground leading-relaxed animate-blur-in delay-300">
                            {PROFILE.bio}
                        </p>
                        <div class="flex gap-4 justify-center text-muted-foreground text-sm pt-2 animate-blur-in delay-400">
                            <a
                                href={PROFILE.links.twitter}
                                class="hover:text-foreground transition-colors"
                            >
                                Twitter
                            </a>
                            <a
                                href={PROFILE.links.email}
                                class="hover:text-foreground transition-colors"
                            >
                                Email
                            </a>
                        </div>
                    </div>
                </header>

                {/* Grouped Video Grid */}
                <div class="space-y-16">
                    {Object.entries(groupedPortfolio).map(
                        ([genre, projects]) => (
                            <section class="space-y-6">
                                <h2 class="text-xl font-semibold tracking-wider uppercase mb-6">
                                    {genre}
                                </h2>

                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                    {projects.map((project, index) => (
                                        <a
                                            href={`/work/${project.slug}`}
                                            class={`group block space-y-3 cursor-pointer animate-blur-in`}
                                            style={`animation-delay: ${Math.min((index + 1) * 100, 600)}ms`}
                                        >
                                            {/* Thumbnail Container with 16:9 Aspect Ratio */}
                                            <div class="relative aspect-video overflow-hidden bg-muted group-hover:opacity-90 transition-opacity">
                                                <img
                                                    src={project.data.thumbnail}
                                                    alt={project.data.title}
                                                    class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
                                                />
                                                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                                    <span class="text-white font-medium tracking-wide">
                                                        VIEW PROJECT
                                                    </span>
                                                </div>
                                            </div>

                                            {/* Info */}
                                            <div class="space-y-1">
                                                <h3 class="font-medium text-lg leading-none group-hover:text-primary transition-colors">
                                                    {project.data.title}
                                                </h3>

                                                <div class="flex items-center justify-between">
                                                    <p class="text-sm text-muted-foreground">
                                                        {project.data.client} •{" "}
                                                        {new Date(
                                                            project.data.date,
                                                        ).getFullYear()}
                                                    </p>

                                                    {/* Roles */}
                                                    <div class="relative group/roles flex items-center justify-end">
                                                        <div class="flex items-center gap-1.5 cursor-help">
                                                            {project.data.role
                                                                .length > 0 && (
                                                                <span class="text-[10px] font-medium bg-muted/30 px-1.5 py-0.5 text-muted-foreground uppercase tracking-wider">
                                                                    {
                                                                        project
                                                                            .data
                                                                            .role[0]
                                                                    }
                                                                </span>
                                                            )}
                                                            {project.data.role
                                                                .length > 1 && (
                                                                <span class="text-[10px] text-muted-foreground font-medium">
                                                                    +
                                                                    {project
                                                                        .data
                                                                        .role
                                                                        .length -
                                                                        1}
                                                                </span>
                                                            )}
                                                        </div>

                                                        {/* Hover Popover */}
                                                        <div class="absolute bottom-full right-0 mb-2 w-max hidden group-hover/roles:flex flex-col gap-1 p-2 bg-popover shadow-lg z-20">
                                                            {project.data.role.map(
                                                                (role) => (
                                                                    <span class="text-xs text-popover-foreground">
                                                                        {role}
                                                                    </span>
                                                                ),
                                                            )}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    ))}
                                </div>
                            </section>
                        ),
                    )}
                </div>

                <footer class="py-6 flex flex-col items-center gap-4 text-sm text-muted-foreground mt-12">
                    <div class="flex flex-col items-center gap-1 text-center">
                        <p class="font-medium tracking-wide">
                            &copy; {new Date().getFullYear()} {PROFILE.name}.
                            All rights reserved.
                        </p>
                        <a
                            href={PROFILE.links.email}
                            class="hover:text-primary transition-colors"
                        >
                            {PROFILE.email}
                        </a>
                    </div>

                    <button
                        id="back-to-top"
                        class="p-2 hover:bg-muted transition-all opacity-0 translate-y-4 data-[visible=true]:opacity-100 data-[visible=true]:translate-y-0"
                        aria-label="Back to top"
                        title="Back to top"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-arrow-up"
                        >
                            <path d="m18 15-6-6-6 6" />
                        </svg>
                    </button>
                </footer>
            </main>
        )
    }

    {
        /* =========================================
        LAYOUT 2: Left Aligned / Bax Style
        ========================================= */
    }
    {
        CURRENT_LAYOUT === 2 && (
            <main class="container mx-auto px-6 py-12 max-w-[1800px] animate-blur-in">
                <div class="absolute right-6 top-6 z-50">
                    <ThemeToggle client:load />
                </div>

                {/* Header Section */}
                <header class="mb-20 pt-10 md:pt-20">
                    <div class="flex flex-col md:flex-row gap-8 items-start">
                        <div class="w-32 h-32 md:w-40 md:h-40 shrink-0 bg-muted overflow-hidden rounded-xl border border-border/50 group cursor-pointer">
                            <img
                                src={PROFILE.avatar}
                                alt="Profile"
                                class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
                            />
                        </div>

                        <div class="space-y-5 max-w-3xl pt-2">
                            <h1 class="text-5xl md:text-7xl font-black tracking-tighter text-foreground font-display uppercase animate-blur-in delay-200">
                                {PROFILE.name}
                            </h1>

                            <div class="space-y-1 text-base md:text-lg text-muted-foreground animate-blur-in delay-300">
                                <p class="font-medium text-foreground">
                                    {PROFILE.role}
                                </p>
                                <p>Contact: {PROFILE.email}</p>
                                <p class="text-sm md:text-base leading-relaxed pt-2 max-w-2xl text-muted-foreground/80">
                                    {PROFILE.bio}
                                </p>
                            </div>
                        </div>
                    </div>
                </header>

                <div class="w-full h-px bg-border/40 mb-12" />

                {/* Works Section */}
                <div class="space-y-4 relative">
                    {Object.entries(groupedPortfolio).map(
                        ([genre, projects]) => (
                            <section class="mb-24">
                                <h3 class="text-xl font-bold tracking-tight mb-8 text-foreground/90">
                                    {genre} Designs
                                </h3>

                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
                                    {projects.map((project, index) => (
                                        <a
                                            href={`/work/${project.slug}`}
                                            class={`group block space-y-4 cursor-pointer animate-blur-in`}
                                            style={`animation-delay: ${Math.min((index + 1) * 100 + 400, 1000)}ms`}
                                        >
                                            {/* Thumbnail */}
                                            <div class="relative aspect-video overflow-hidden bg-muted rounded-md border border-border/50 transition-all duration-500 group-hover:border-primary/50">
                                                <img
                                                    src={project.data.thumbnail}
                                                    alt={project.data.title}
                                                    class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-105"
                                                />
                                                {/* Overlay */}
                                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
                                                    {/* Optional overlay content */}
                                                </div>
                                            </div>

                                            {/* Info */}
                                            <div class="flex justify-between items-start gap-4">
                                                <div class="space-y-1">
                                                    <h4 class="font-bold text-lg leading-tight group-hover:text-primary transition-colors">
                                                        {project.data.title}
                                                    </h4>
                                                    <p class="text-xs text-muted-foreground/80">
                                                        {project.data.client}
                                                    </p>
                                                </div>
                                                <span class="text-xs font-mono text-muted-foreground/60">
                                                    {new Date(
                                                        project.data.date,
                                                    ).getFullYear()}
                                                </span>
                                            </div>
                                        </a>
                                    ))}
                                </div>
                                <div class="flex items-center gap-4 mb-10" />
                            </section>
                        ),
                    )}
                </div>

                <footer class="py-12 border-t border-border/40 mt-20">
                    <div class="flex justify-between items-center text-sm text-muted-foreground">
                        <p>
                            &copy; {new Date().getFullYear()} {PROFILE.name}.
                            All rights reserved.
                        </p>
                        <div class="flex gap-4">
                            <a
                                href={PROFILE.links.twitter}
                                class="hover:text-foreground"
                            >
                                Twitter
                            </a>
                            <a
                                href={PROFILE.links.email}
                                class="hover:text-foreground"
                            >
                                Email
                            </a>
                        </div>
                    </div>
                </footer>
            </main>
        )
    }

    {
        /* =========================================
        LAYOUT 3: Split View (Modern Sidebar)
        ========================================= */
    }
    {
        CURRENT_LAYOUT === 3 && (
            <div class="min-h-screen flex flex-col md:flex-row animate-blur-in bg-background">
                {/* Fixed Sidebar */}
                <aside class="w-full md:w-[40%] md:h-screen md:sticky md:top-0 p-8 md:p-12 lg:p-16 flex flex-col justify-between border-b md:border-b-0 md:border-r border-border/40 z-10 bg-background/50 backdrop-blur-md">
                    <div class="space-y-8">
                        <div class="flex justify-between items-start animate-blur-in delay-100">
                            <div class="w-20 h-20 overflow-hidden rounded-full border border-border group cursor-pointer">
                                <img
                                    src={PROFILE.avatar}
                                    alt="Profile"
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                />
                            </div>
                            <ThemeToggle client:load />
                        </div>

                        <div class="space-y-4">
                            <h1 class="text-6xl font-black uppercase tracking-tighter leading-none hover:text-primary transition-colors duration-500 cursor-default animate-blur-in delay-200">
                                {PROFILE.name}
                            </h1>
                            <p class="text-xl md:text-2xl text-muted-foreground font-light leading-relaxed max-w-sm animate-blur-in delay-300">
                                {PROFILE.role}
                            </p>
                        </div>

                        <p class="text-muted-foreground/80 max-w-sm text-sm md:text-base animate-blur-in delay-400">
                            {PROFILE.bio}
                        </p>
                    </div>

                    <div class="space-y-8 mt-12 md:mt-0">
                        {/* Genre Navigation */}
                        <nav class="flex flex-col gap-2 items-start">
                            <p class="text-xs font-bold uppercase tracking-wider text-muted-foreground mb-2">
                                Jump to
                            </p>
                            {Object.keys(groupedPortfolio).map((genre) => (
                                <a
                                    href={`#${genre}`}
                                    class="text-lg md:text-xl font-bold hover:translate-x-2 hover:text-primary transition-all duration-300"
                                >
                                    {genre}
                                </a>
                            ))}
                        </nav>

                        <div class="w-full h-px bg-border/40 my-6" />

                        <nav class="flex flex-col gap-2 items-start">
                            <a
                                href={PROFILE.links.twitter}
                                class="text-lg md:text-xl font-bold hover:translate-x-2 transition-transform duration-300"
                            >
                                Twitter ↗
                            </a>
                            <a
                                href={PROFILE.links.email}
                                class="text-lg md:text-xl font-bold hover:translate-x-2 transition-transform duration-300"
                            >
                                Email ↗
                            </a>
                        </nav>

                        <p class="text-xs text-muted-foreground opacity-50">
                            &copy; {new Date().getFullYear()} {PROFILE.name}.
                            All rights reserved.
                        </p>
                    </div>
                </aside>

                {/* Scrollable Content */}
                <main class="w-full md:w-[60%] p-6 md:p-12 lg:p-16">
                    <div class="space-y-24">
                        {Object.entries(groupedPortfolio).map(
                            ([genre, projects]) => (
                                <section id={genre} class="scroll-mt-24">
                                    <div class="flex items-center gap-4 mb-12">
                                        <h2 class="text-sm font-bold tracking-[0.2em] uppercase text-muted-foreground border-b border-border/50 pb-2 flex-grow">
                                            {genre}
                                        </h2>
                                        <span class="text-xs font-mono text-muted-foreground">
                                            {projects.length} PROJECTS
                                        </span>
                                    </div>

                                    <div class="grid grid-cols-1 gap-12">
                                        {projects.map((project, index) => (
                                            <a
                                                href={`/work/${project.slug}`}
                                                class={`group block space-y-4 animate-blur-in`}
                                                style={`animation-delay: ${Math.min((index + 1) * 100 + 300, 1000)}ms`}
                                            >
                                                <div class="aspect-video bg-muted overflow-hidden relative">
                                                    <img
                                                        src={
                                                            project.data
                                                                .thumbnail
                                                        }
                                                        alt={project.data.title}
                                                        class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
                                                    />
                                                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-500 flex items-center justify-center">
                                                        <div class="w-16 h-16 rounded-full bg-background/10 backdrop-blur-sm flex items-center justify-center opacity-0 scale-50 group-hover:opacity-100 group-hover:scale-100 transition-all duration-500 border border-white/20">
                                                            <span class="text-white text-2xl">
                                                                →
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="flex justify-between items-baseline border-b border-transparent group-hover:border-primary/50 pb-2 transition-colors">
                                                    <h3 class="text-3xl font-bold uppercase tracking-tight group-hover:text-primary transition-colors">
                                                        {project.data.title}
                                                    </h3>
                                                    <span class="font-mono text-sm text-muted-foreground">
                                                        {new Date(
                                                            project.data.date,
                                                        ).getFullYear()}
                                                    </span>
                                                </div>
                                                <p class="text-muted-foreground line-clamp-2">
                                                    {project.data.client} /{" "}
                                                    {project.data.role.join(
                                                        ", ",
                                                    )}
                                                </p>
                                            </a>
                                        ))}
                                    </div>
                                </section>
                            ),
                        )}
                    </div>
                </main>
            </div>
        )
    }

    {/* Shared Scripts */}
    <script>
        document.addEventListener("astro:page-load", () => {
            // Logic for Layout 1/2/3/4 Back to Top (Existing)
            const backToTopBtn = document.getElementById("back-to-top");
            if (backToTopBtn) {
                backToTopBtn.addEventListener("click", () => {
                    window.scrollTo({ top: 0, behavior: "smooth" });
                });
                // ... existing toggle logic ...
                const toggleVisibility = () => {
                    const scrolled = window.scrollY > 300;
                    backToTopBtn.dataset.visible = scrolled.toString();
                    if (scrolled) {
                        backToTopBtn.classList.remove(
                            "invisible",
                            "pointer-events-none",
                        );
                    }
                };
                window.addEventListener("scroll", toggleVisibility);
            }
        });
    </script>
</Layout>
